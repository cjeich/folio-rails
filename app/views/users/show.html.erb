<div class="notifications">
	<p id="notice"><%= notice %></p>
</div>
      <div class="btn-group pull-right" style="text-align:center;">
        <%= link_to raw('<i class=" icon-circle-arrow-left icon-white"></i>'), users_path, class: 'btn btn-inverse', rel: 'tooltip', title: 'Back' %>
        <%= link_to raw('<i class=" icon-edit icon-white"></i>'), edit_user_path(@user), class: 'btn btn-inverse', title: 'Edit', rel: 'tooltip' %>
      </div>

<div class="row">
	<div class="span3">
			<%= image_tag @user.image_url(:thumb).to_s, :alt => @user.screen_name, :class=> 'img-polaroid' %>
	</div>
	<div class="span3">
		<div class="name">
			<span class="fname"><%= @user.first_name %></span> <span class="lname"><%= @user.last_name %></span> <span class="screen_name">( <%= @user.screen_name %> )</span>
		</div>
		<div class="email">
			<strong>Email:</strong> <%= @user.email %>
		</div>
	</div>
</div>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<table class="table table-striped table-condensed table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @user.projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td>
      <div class="btn-group" style="text-align:center;">
        <%= link_to raw('<i class=" icon-circle-arrow-right icon-white"></i>'), project, class: 'btn btn-inverse', rel: 'tooltip', title: 'View' %>
        <%= link_to raw('<i class=" icon-edit icon-white"></i>'), edit_project_path(project), class: 'btn btn-inverse', title: 'Edit', rel: 'tooltip' %>
        <%= link_to raw('<i class="icon-trash icon-white"></i>'), project, method: :delete, class: 'btn btn-danger delete-button', title: 'Delete', data: {  confirm: 'Do you really want to delete this project?' } %>
      </div>
    </td>
  </tr>
<% end %>
</table>