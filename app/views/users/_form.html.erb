<%= form_for(@user, class: 'form-horizontal', :html => {:multipart => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation alert alert-warning">
      <a href="#" class="close" data-dismiss="alert">Ã—</a>
      <h4> Please fix the following <%= pluralize(@user.errors.count, "error") %> and submit the form again.</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="controls">
<div class="row">
  <div class="span3">
    <div class="control-group">
      <%= f.label :screen_name, class: 'form-label' %>
      <%= f.text_field :screen_name %>
    </div>
  </div>
  <div class="span3">
    <div class="control-group">
      <%= f.label :email, class: 'form-label' %>
      <%= f.text_field :email %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span3">
  <div class="control-group">
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name %>
  </div>
  </div>
  <div class="span3">
  <div class="control-group">
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name %>
  </div>
  </div>
</div>

<div class="row">
  <div class="span6">
  <div class="control-group">
    <%= f.label :image, class: 'form-label' %>
    <%= f.file_field :image %>
  </div>
  </div>
</div>

<div class="row">
  <div class="span4 offset1">
    <div class="control-group">
      <%= f.submit 'Create User', class: 'btn btn-block' %>
    </div>
  </div>
</div>

</div>

<% end %>
